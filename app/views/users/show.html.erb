<% provide(:title, @user.name) %>
<div class="jumbotron container-fluid center">

		<%= gravatar_for @user, 100 %>

		<h1>
			<%= @user.name %>
		</h1>
		<h3>
			<%= @user.email %>
		</h3>
</div>

<h1>Events created by you</h1>

<div class="row">
	<% @user.events.each do |e| %>
		<%= render e %>
	<% end %>
</div>

<h1>Events you're attending</h1>
<div class="row">	
	<% userevents.each do |userevent| %>
		<% if userevent.attendee_id == @user.id %>
			<p><%= render Event.find(userevent.attended_event_id) %></p>
		<% end %>
	<% end %>
</div>


