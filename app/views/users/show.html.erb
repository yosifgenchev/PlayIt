<% provide(:title, @user.name) %>
<div class="jumbotron container-fluid center">

		<% if (@user.uid.nil?) %>
			<%= @user.picture.nil? ? 
	            image_tag(@user.picture, class: "img-circle", size: '100x100') :
	            image_tag('default_profile_picture/default_profile_picture.jpg', class: "img-circle", size: '100x100') %>
	    <% else %>
	    	<%= !@user.picture.nil? ? 
	            image_tag("http://graph.facebook.com/v2.6/#{@user.uid}/picture", class: "img-circle", size: "100x100") :
	            image_tag(@user.picture, class: "img-circle", size: '100x100') %>
	    <% end %>

		<h1>
			<%= @user.name %>
		</h1>
		<h3>
			<%= @user.email %>
		</h3>
</div>

<div class="container">
	<div class="row">	
		<% @user.events.each do |e| %>
			<%= e.name %>
		<% end %>
	</div>
</div>


