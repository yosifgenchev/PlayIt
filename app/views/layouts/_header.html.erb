<header>
  <nav class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Sporticted", root_path, class: "navbar-brand", id: "logo" %>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <% if logged_in? %>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Create event", places_new_path %></li>
          <!--
          <li><%= link_to "Create place", places_new_path %></li>
          -->
        </ul>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Contacts", contacts_path %></li>
        <li><%= link_to "Help", help_path %></li>

        
        <% if logged_in? %>
            <li class="dropdown">
              <button class="dropbtn">
                <li class="navbar-avatar">

                <% if (current_user.uid.nil?) %>
                    <%= !current_user.picture.nil? ? 
                      image_tag(current_user.picture, class: "img-circle", size: "30x30") :
                      image_tag('default_profile_picture/default_profile_picture.jpg', class: "img-circle", size: "30x30" ) %>
                <% else %>
                  <%= current_user.picture.nil? ? 
                    image_tag("https://graph.facebook.com/v2.6/#{current_user.uid}/picture", class: "img-circle", size: "30x30") :
                    image_tag(current_user.picture, class: "img-circle", size: "30x30") %>
                <% end %>
                <%= current_user.name %>
                </li>
              </button>
              <ul class="dropdown-content">
                <%= link_to "Profile", current_user %>
                <%= link_to "Settings", edit_user_path(current_user) %>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign up", signup_path %></li>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
      </ul>
      
    </div>
    
  </div>
  </nav>
</header>